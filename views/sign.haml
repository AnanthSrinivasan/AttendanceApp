%form#formsignin.form-horizontal{:action => "/sign", :method => "post", :role => "form"}
  %fieldset
    #legend
      %legend LDAP Sign-in 
    
    .form-group
      %label.col-lg-2.control-label{:for => "courseid"} Course id: 
      .col-lg-3 
        %input#inputcrs.form-control{:name => "courseid", :value => "#{@courseid}", :type => "text", :readonly => "true"}
    .form-group
      %label.col-lg-2.control-label{:for => "inputName"} Corp Name
      .col-lg-3
        %input#inputName.form-control{:required => "", :name => "empname", :placeholder => "corp\\username", :type => "text"}
    .form-group
      %label.col-lg-2.control-label{:for => "inputPassword"} Password
      .col-lg-3
        %input#inputPassword.form-control{:required => "", :name => "emppass", :placeholder => "Password", :type => "password"}
    .form-group
      .col-lg-offset-2.col-lg-10
        .checkbox
          %label
            %input{:type => "checkbox"}
              Remember me
    .form-group
      .col-lg-offset-2.col-lg-10
        %button.btn.btn-lg.btn-primary{:type => "submit"} Sign in  
      



